<movements>
    <movement>
        <!-- Move forward 500 units at speed 10 -->
        <set speed="10" angle="0"/>
        <forward d="500"/>
        
        <!-- Turn right 90 degrees -->
        <turn angle="90"/>
        
        <!-- Move forward 300 units -->
        <forward d="300"/>
        
        <!-- Wait for 2 seconds -->
        <wait t="2"/>
        
        <!-- Turn left and move -->
        <turn angle="-90"/>
        <forward d="400"/>
        
        <!-- Repeat movements -->
        <turn angle="180"/>
        <forward d="400"/>
    </movement>
</movements>